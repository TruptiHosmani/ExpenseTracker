
<label class="label"><%= t("activerecord.attributes.vendor.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</label>
<p><%= @vendor.name %></p>

<label class="label"><%= t("activerecord.attributes.vendor.location", :default => t("activerecord.labels.location", :default => "Location")) %>:</label>
<p><%= @vendor.location %></p>

<div class="form-actions">
<%= link_to "Back", vendors_path, :class => 'btn'  %>
<%= link_to "Edit", edit_vendor_path(@vendor), :class => 'btn' %>
<%= link_to "Delete", vendor_path(@vendor), :method => "delete", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class => 'btn' %>
</div>
