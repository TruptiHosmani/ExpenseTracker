<h1>Vendors</h1>
<table class="table table-striped">
 <thead>
  <tr>
    <th>ID</th>
        <th>
      <%= t("activerecord.attributes.vendor.name", :default => t("activerecord.labels.name", :default => "Name")) %>
    </th>
        <th>Created at</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @vendors.each do |vendor| -%>
   <tr>
    <td><%= vendor.id %></td>
        <td><%= link_to vendor.name, vendor_path(vendor) %>
    </td>
        <td><%= vendor.created_at %></td>
    <td>
      <%= link_to "Show", vendor_path(vendor) %>
      <%= link_to "Edit", edit_vendor_path(vendor) %>
      <%= link_to "Destroy", vendor_path(vendor), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
    </td>
    </tr>
    <% end -%>
   </tbody>
</table>

<%= link_to "New", new_vendor_path, :class => 'btn btn-primary' %>
