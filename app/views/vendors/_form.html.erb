
<div class="clearfix">
   <%= f.label :name, t("activerecord.attributes.vendor.name", :default => "Name"), :class => :label %>
  <div class="input">
    <%= f.text_field :name, :class => 'text_field' %>
  </div>
</div>

<div class="clearfix">
   <%= f.label :location, t("activerecord.attributes.vendor.location", :default => "Location"), :class => :label %>
  <div class="input">
    <%= f.text_field :location, :class => 'text_field' %>
  </div>
</div>
<div class="form-actions">
  <button class="btn primary" type="submit">Save</button> or
	<%= link_to "Cancel", vendors_path %>
</div>
