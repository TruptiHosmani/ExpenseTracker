<%= form_for(@employee) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :dob %><br />
    <%= f.text_field :dob %>
  </div>

  <div class="field">
    <%= f.label :department %><br />
    <%= f.collection_select :department_id, @departments, :id, :name, :prompt => "Select a department" %>
  </div>

  <div class="field">
    <%= f.label :job_title %><br />
    <%= f.collection_select :job_title_id, @job_titles, :id, :name, :prompt => "Select a job title" %>
  </div>

  <div class="field">
    <%= f.label :manager %><br />
    <%= f.collection_select :manager_id, @managers, :id, :name, :prompt => "Select a manager" %>
  </div>

   <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>